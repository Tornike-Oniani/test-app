<Page x:Class="UiDesktopApp2.Views.Pages.SubjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UiDesktopApp2.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DataContext="{d:DesignInstance local:SubjectsPage,
                                 IsDesignTimeCreatable=False}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="Subjects">

    <Grid x:Name="MyGrid">
        <Grid.Resources>
            <StackPanel 
                x:Key="DialogContent" 
                Width="350"
                >
                <ui:TextBox
                    PlaceholderText="First name..."
                    Text="{Binding DataContext.ViewModel.NewPersonFirstName, Source={x:Reference Name=MyGrid}}"
                    Margin="0 0 0 12"
                    />
                <ui:TextBox
                    PlaceholderText="Last name..."
                    Text="{Binding DataContext.ViewModel.NewPersonLastName, Source={x:Reference Name=MyGrid}}"
                    Margin="0 0 0 12"
                    />
            </StackPanel>
        </Grid.Resources>
        <StackPanel>
            <ui:Button
                Content="Add new subject"
                Appearance="Primary"
                Icon="{ui:SymbolIcon Person24}"
                Command="{Binding ViewModel.PersonAddCommand}"
                CommandParameter="{StaticResource DialogContent}"
                Margin="0 0 0 12"
                />
            <ui:Card
                VerticalAlignment="Top"
                >
                <ui:ListView
                    ItemsSource="{Binding ViewModel.GlobalState.Subjects}"
                    >
                    <ui:ListView.View>
                        <ui:GridView>
                            <GridViewColumn
                                DisplayMemberBinding="{Binding FirstName}"
                                Header="First Name" />
                            <GridViewColumn
                                DisplayMemberBinding="{Binding LastName}"
                                Header="Last Name" />
                        </ui:GridView>
                    </ui:ListView.View>
                </ui:ListView>
            </ui:Card>
        </StackPanel>
    </Grid>
</Page>
