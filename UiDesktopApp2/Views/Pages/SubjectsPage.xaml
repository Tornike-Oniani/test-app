<Page x:Class="UiDesktopApp2.Views.Pages.SubjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UiDesktopApp2.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DataContext="{d:DesignInstance local:SubjectsPage,
                                 IsDesignTimeCreatable=False}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="SubjectsPage">

    <Grid x:Name="MyGrid">
        <Grid.Resources>
            <StackPanel 
                x:Key="DialogContent" 
                Width="350"
                >
                <Label
                    Margin="0 0 0 6"
                    >
                    Create new subject
                </Label>
                <ui:TextBox
                    PlaceholderText="First name..."
                    Text="{Binding DataContext.ViewModel.NewPersonFirstName, Source={x:Reference Name=MyGrid}}"
                    Margin="0 0 0 12"
                    />
                <ui:TextBox
                    PlaceholderText="Last name..."
                    Text="{Binding DataContext.ViewModel.NewPersonLastName, Source={x:Reference Name=MyGrid}}"
                    Margin="0 0 0 12"
                    />
            </StackPanel>
        </Grid.Resources>
        <StackPanel>
            <ui:Button
                Content="Add new subject"
                Appearance="Primary"
                Icon="{ui:SymbolIcon Person24}"
                Command="{Binding ViewModel.PersonAddCommand}"
                CommandParameter="{StaticResource DialogContent}"
                Margin="0 0 0 12"
                />
            <ui:Card
                VerticalAlignment="Top"
                >
                <TreeView
                    ItemsSource="{Binding ViewModel.Subjects}"
                    AllowDrop="True"
                    >
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Results}">
                            <!-- Subject item -->
                            <StackPanel
                                Orientation="Horizontal"
                                >
                                <ui:SymbolIcon
                                    Symbol="Person24"
                                    Margin="0 0 12 0"
                                    />
                                <TextBlock 
                                    Text="{Binding FirstName}" 
                                    Margin="0 0 6 0"
                                    />
                                <TextBlock
                                    Text="{Binding LastName}"
                                    />
                            </StackPanel>
                            <HierarchicalDataTemplate.ItemTemplate>
                                <DataTemplate>
                                    <!-- Test item -->
                                    <Border>
                                        <Border.InputBindings>
                                            <MouseBinding 
                                                Gesture="LeftClick"
                                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Page}}, Path=DataContext.ViewModel.OpenTestResultCommand}"
                                                CommandParameter="{Binding}"
                                                />
                                        </Border.InputBindings>
                                        <StackPanel
                                            Orientation="Horizontal"
                                            >
                                            <ui:SymbolIcon
                                                Symbol="DocumentBulletList24"
                                                Margin="0 0 12 0"
                                                />
                                            <TextBlock 
                                                Text="{Binding Test.Name}"
                                                Margin="0 0 8 0"
                                                />
                                            <Label
                                                Content="{Binding Date}"
                                                />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </HierarchicalDataTemplate.ItemTemplate>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </ui:Card>
        </StackPanel>
    </Grid>
</Page>
