<Page x:Class="UiDesktopApp2.Views.Pages.TestResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UiDesktopApp2.Views.Pages"
      xmlns:helpers="clr-namespace:UiDesktopApp2.Helpers"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DataContext="{d:DesignInstance local:TestResultPage,
                           IsDesignTimeCreatable=False}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="TestResultPage"
      ui:NavigationView.HeaderContent="Results"
      >

    <Page.Resources>
        <helpers:DoubleRounderConverter x:Key="DoubleRounder" />
        <helpers:BoolToYesNoConverter x:Key="BoolToYesNo" />
    </Page.Resources>
    
    <StackPanel>
        <!-- Basic information -->
        <ui:Card
            Margin="0 0 0 24"
            >
            <Grid>
                <StackPanel
                    HorizontalAlignment="Left"
                    >
                    <Label FontSize="14">User</Label>
                    <TextBlock
                        Text="{Binding ViewModel.Subject.FullName}"
                        FontSize="16"
                        FontWeight="SemiBold"
                        />
                </StackPanel>
                <StackPanel
                    HorizontalAlignment="Center"
                    >
                    <Label FontSize="14">Test</Label>
                    <TextBlock
                        Text="{Binding ViewModel.Result.Test.Name}"
                        FontWeight="SemiBold"
                        FontSize="16"
                        />
                </StackPanel>
                <StackPanel
                    HorizontalAlignment="Right"
                    >
                    <Label FontSize="14">Date</Label>
                    <TextBlock
                        Text="{Binding ViewModel.Result.Date}"
                        FontWeight="SemiBold"
                        FontSize="16"
                        />
                </StackPanel>
            </Grid>
        </ui:Card>
        <!-- Performance summary -->
        <ui:Card
            Margin="0 0 0 24"
            >
            <StackPanel>
                <TextBlock
                    Text="Performance summary"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0 0 0 12"
                    />
                <Grid>
                    <StackPanel
                        HorizontalAlignment="Left"
                        >
                        <Label FontSize="14">Average recognition time</Label>
                        <StackPanel
                            Orientation="Horizontal"
                            >
                            <TextBlock
                                Text="{Binding ViewModel.AverageTimePerKnownImage, StringFormat=Known: {0}s}"
                                FontWeight="SemiBold"
                                FontSize="16"
                                Margin="0 0 7 0"
                                />
                            <Label
                                Content="/"
                                FontSize="16"
                                />
                            <TextBlock
                                Text="{Binding ViewModel.AverageTimePerUnkownImage, StringFormat=Unknown: {0}s}"
                                FontWeight="SemiBold"
                                FontSize="16"
                                Margin="7 0 0 0"
                                />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        >
                        <Label FontSize="14">Images Tested</Label>
                        <TextBlock
                            Text="{Binding ViewModel.Result.ImageSetTimes.Count}"
                            FontWeight="SemiBold"
                            FontSize="16"
                            />
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Right"
                        >
                        <Label FontSize="14">Max time allowed</Label>
                        <TextBlock
                            Text="{Binding ViewModel.Result.AvailableTimePerImageVariant, StringFormat={}{0}s}"
                            FontWeight="SemiBold"
                            FontSize="16"
                            />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ui:Card>
        <!-- Detailed results -->
        <ui:Card>
            <StackPanel>
                <TextBlock
                    Text="Detailed results"
                    FontSize="18"
                    FontWeight="Bold"
                    Margin="0 0 0 12"
                    />
                <ui:ListView
                    ItemsSource="{Binding ViewModel.Result.ImageSetTimes}"
                    >
                    <ui:ListView.Template>
                        <ControlTemplate TargetType="{x:Type ui:ListView}">
                            <StackPanel>
                                <Border
                                    Background="{DynamicResource ApplicationBackgroundBrush}"
                                    Padding="12 12 12 12"
                                    >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Text="IMAGE"
                                            Grid.Column="0"
                                            />
                                        <TextBlock
                                            Text="RECOGNITION TIME"
                                            Grid.Column="1"
                                            />
                                        <TextBlock
                                            Text="IS UNKNOWN?"
                                            Grid.Column="2"
                                            />
                                    </Grid>
                                </Border>
                                <ItemsPresenter />
                            </StackPanel>
                        </ControlTemplate>
                    </ui:ListView.Template>
                    <ui:ListView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="6 6 6 6"
                                >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Text="{Binding ImageSet.Name}"
                                        FontSize="16"
                                        Grid.Column="0"
                                        />
                                    <TextBlock
                                        Text="{Binding Seconds, StringFormat={}{0}s, Converter={StaticResource DoubleRounder}, ConverterParameter=2}"
                                        FontSize="16"
                                        Grid.Column="1"
                                        />
                                    <Border
                                        HorizontalAlignment="Left"
                                        Grid.Column="2"
                                        >
                                        <TextBlock
                                            Text="{Binding ImageSet.IsUnknown, Converter={StaticResource BoolToYesNo}}"
                                            FontSize="16"
                                            />
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>
            </StackPanel>
        </ui:Card>
    </StackPanel>
</Page>
